<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:weightSum="1">

    <fragment
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:name="es.cta.android.practicalistadetallefrag.fragments.ListFragment" android:id="@+id/fragmentList"
            android:layout_weight="0.3"/>
    <fragment
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:name="es.cta.android.practicalistadetallefrag.fragments.DetailFragment"
            android:id="@+id/fragmentDetailLands"
            android:layout_weight="0.7"/>
</LinearLayout>